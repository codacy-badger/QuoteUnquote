<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".configure.fragment.appearance.FragmentAppearance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="5dp"
        android:paddingStart="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/fragment_appearance_title"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewGeneralInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/fragment_appearance_instruction_touch"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_transparency"
            android:textSize="18sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seek_bar_transparency"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:paddingVertical="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingEnd="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:text="@string/fragment_appearance_colour"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerColour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:paddingEnd="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:text="@string/fragment_appearance_size"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBoxDisplayToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:paddingVertical="10dp"
            android:text="@string/fragment_appearance_display_toolbar"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_first_page_black_24dp"
                android:drawablePadding="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_instructions_first"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_report_black_24dp"
                android:drawablePadding="5dp"
                android:paddingVertical="3dp"
                android:text="@string/fragment_appearance_instructions_report"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_favorite_border_black_24dp"
                android:drawablePadding="5dp"
                android:paddingVertical="3dp"
                android:text="@string/fragment_appearance_instructions_favourite_sw600dp"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_share_black_24dp"
                android:drawablePadding="5dp"
                android:paddingVertical="3dp"
                android:text="@string/fragment_appearance_instructions_share"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/fragment_appearance_instructions_next"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>