  job1:
    name: Job 1
    runs-on: ubuntu-latest
    steps:
      - name: Sleep and Run
        run: |
          echo "Sleeping for 10"
          sleep 10

  job2:
    name: Job 2
    needs: job1
    runs-on: ubuntu-latest
    steps:
      - name: Dependant is Running
        run: |
          echo "Completed job 2, but triggering failure"
          exit 1

  job3:
    name: Job 3
    needs: job2
    runs-on: ubuntu-latest
    steps:
      - name: Will never run
        run: |
          echo "If you can read this, the experiment failed"